				<!-- End of Topbar -->

				<!-- Begin Page Content -->
				<div class="container-fluid">

					<!-- Page Heading -->
					<h1 class="h3 mb-2 text-gray-800">Users Manager</h1>
					<hr>
					<a href="${pageContext.request.contextPath}/admin/user/add" class="btn btn-primary">Add user</a>
					<hr>
					<!-- DataTales Example -->
					<div class="card shadow mb-4">
						<div class="card-header py-3">
							<h6 class="m-0 font-weight-bold text-primary">DataTables
								</h6>
						</div>
						<div class="card-body">
							<div class="table-responsive">
								<table class="table table-bordered" id="dataTable" width="100%"
									cellspacing="0">
									<thead>
										<tr>
											<th>ID</th>
											<th>UserName</th>
											<th>Password</th>
											<th>Fullname</th>
											<th>Email</th>
											<th>Role</th>
											<th>Action</th>
										</tr>
									</thead>
									<tbody>
										<% int i = 1; %>
										<c:forEach var="item" items="${users}">
											<tr>
												<td><%= i++ %></td>
												<td>${item.username}</td>
												<td>${item.password}</td>
												<td>${item.fullname}</td>
												<td>${item.email}</td>
												<td>${item.admin? "admin":"user"}</td>
												<td>
													<a href="${pageContext.request.contextPath}/admin/user/update?uid=${item.username}" class="btn btn-primary">Edit</a>
													<a href="${pageContext.request.contextPath}/admin/user/delete?uid=${item.username}" class="btn btn-danger">Delete</a>
												</td>
											</tr>
										</c:forEach>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
